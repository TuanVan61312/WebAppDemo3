@model WebAppDemo3.Models.Book;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .list-book {
        width: 1200px;
        margin: auto;
        display: flex;
        flex-wrap: wrap;
    }

    .book {
        margin-top: 10px;
        margin-right: 10px;
        width: 120px;
        height: 200px;
    }

    img {
        width: 100px;
        height: 100px;
        display: block;
        margin: auto;
    }

    .title {
        display: block;
        font-size: 15px;
        font-weight: bold;
        text-align: center;
    }

    .viewBook, .addBook {
        width: calc((100% - 2px) / 2);
        display: inline-block;
        float: left;
        padding: 2px;
        font-size: 12px;
        box-sizing: border-box;
        color: #fff;
        background: #808080;
        text-decoration: none;
        text-align: center;
    }

    .addBook {
        margin-left: 2px;
    }
</style>

<div class="list-book">
    @foreach (var item in ViewBag.book)
    {
        <div class="book">
            <img src="~/images/@item.Image" class="img-responsive" />
            <span class="title">@item.Title</span>
            <a href="" class="viewBook">View</a>
            <a asp-controller="Carts" asp-action="addCart" asp-route-id="@item.BookId" class="addBook">Add order</a>
        </div>
    }


</div>
